@{
    ViewData["Title"] = "Profil";
}

<div class="row">
    
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-4">@ViewData["Title"]</h1>
    </div>
</div>
<div class="row mt-3">
    <div class="col-6">
        <div class="mb-3">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>
        <form method="post" asp-action="ProfileChangeFulName">
            <div class="form-group">
                <label class="form-label">Ad-Soyad</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" placeholder="Adınız" value="@ViewData["FullName"]">
                    <button class="btn btn-outline-secondary" type="submit" id=""><i class="fa-solid fa-bookmark me-2"></i>Kaydet</button>
                </div>
            </div>
        </form>
        <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
                <label class="form-label">Yeni Şifre</label>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" placeholder="Yeni şifreniz" >
                    <button class="btn btn-outline-secondary" type="submit" id=""><i class="fa-solid fa-bookmark me-2"></i>Kaydet</button>
                </div>
                @if (ViewData["result"]!=null && ViewData["result"]=="PasswordChanged")
                {
                    <span class="text-success small">Şifre başarıyla güncellendi.</span>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts{
@if (ViewData["result"] != null  && ViewData["result"] == "PasswordChanged"){
        <script>
            toastr["success"]("Şifre Başarıyla Güncellendi", "Başarılı")
        </script>
    }
}